function AzureUI:Dialog(config)
    config = config or {}
    local title = config.Title or "Dialog"
    local content = config.Content or ""
    local buttons = config.Buttons or {}
    
    local dialogGui = Create("ScreenGui", {
        Name = GenerateRandomName(),

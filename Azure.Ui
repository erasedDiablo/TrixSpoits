    })
    Create("UICorner", {CornerRadius = UDim.new(0, 8), Parent = cancelBtn})
    
    local applyBtn = Create("TextButton", {
        Parent = main,
        Size = UDim2.new(0, 110, 0, 34),
        Position = UDim2.new(0, 150, 0, 290),
        BackgroundColor3 = Theme.Accent,
        Text = "Apply",
        Font = Enum.Font.GothamBold,
        TextColor3 = Color3.new(1, 1, 1),
        TextSize = 14
    })
    Create("UICorner", {CornerRadius = UDim.new(0, 8), Parent = applyBtn})
    
    local function updateColor(newH, newS, newV, updateInputs)
        h, s, v = newH, newS, newV
        local color = Color3.fromHSV(h, s, v)
        preview.BackgroundColor3 = color
        svMap.BackgroundColor3 = Color3.fromHSV(h, 1, 1)
        
        if updateInputs then
            rInput.Text = tostring(math.floor(color.R * 255))
            gInput.Text = tostring(math.floor(color.G * 255))
            bInput.Text = tostring(math.floor(color.B * 255))
        end
    end
    
    -- Dragging Logic
    local draggingSV = false
    local draggingHue = false
    
    svMap.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            draggingSV = true
        end
    end)
    
    hueSlider.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            draggingHue = true
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            if draggingSV then
                local pos = Vector2.new(Mouse.X, Mouse.Y) - svMap.AbsolutePosition
                local newS = math.clamp(pos.X / svMap.AbsoluteSize.X, 0, 1)
                local newV = 1 - math.clamp(pos.Y / svMap.AbsoluteSize.Y, 0, 1)
                svCursor.Position = UDim2.new(newS, -6, 1-newV, -6)
                updateColor(h, newS, newV, true)
            elseif draggingHue then
                local pos = Vector2.new(Mouse.X, Mouse.Y) - hueSlider.AbsolutePosition
                local newH = math.clamp(pos.Y / hueSlider.AbsoluteSize.Y, 0, 1)
                hueCursor.Position = UDim2.new(0.5, -2, newH, -2)
                updateColor(newH, s, v, false)
            end
        end
    end)
    
    UserInputService.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            draggingSV = false
            draggingHue = false
        end
    end)
    
    -- RGB Input Logic
    local function updateFromRGB()
        local r = math.clamp(tonumber(rInput.Text) or 0, 0, 255) / 255
        local g = math.clamp(tonumber(gInput.Text) or 0, 0, 255) / 255
        local b = math.clamp(tonumber(bInput.Text) or 0, 0, 255) / 255
        local newH, newS, newV = Color3.new(r, g, b):ToHSV()
        updateColor(newH, newS, newV, false)
        svCursor.Position = UDim2.new(newS, -6, 1-newV, -6)
        hueCursor.Position = UDim2.new(0.5, -2, newH, -2)
    end
    
    rInput.FocusLost:Connect(updateFromRGB)
    gInput.FocusLost:Connect(updateFromRGB)
    bInput.FocusLost:Connect(updateFromRGB)
    
    local function close()
        Tween(overlay, {BackgroundTransparency = 1}, 0.2)
        Tween(main, {Position = UDim2.new(0.5, 0, 0.5, 20), BackgroundTransparency = 1}, 0.2)
        task.wait(0.2)
        pickerGui:Destroy()
    end
    
    cancelBtn.MouseButton1Click:Connect(close)
    
    applyBtn.MouseButton1Click:Connect(function()
        callback(Color3.fromHSV(h, s, v))
        close()
    end)
end


--[[
    AzureUI v5.0 - WindUI + Sirius + IconModule Hybrid
    Features: Icon integration, Auto-minimizing sidebar, Content-pushing dropdowns,
    Enhanced draggable window, Working slider input, Sirius-style bottom bar,
    Advanced animations, Improved notifications
]]

local AzureUI = {}
AzureUI.__index = AzureUI

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local UserInputService = game:GetService("UserInputService")
local HttpService = game:GetService("HttpService")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()

-- Icon Module Integration
local IconModule = {
    IconsType = "lucide",
    New = nil,
    IconThemeTag = nil,
    Icons = {}
}

-- Load icon packs
local function SafeLoad(url)
    local success, result = pcall(function()
        return loadstring(game:HttpGet(url))()
    end)
    if success then return result else return {} end
end

IconModule.Icons = {
    lucide = SafeLoad("https://raw.githubusercontent.com/Footagesus/Icons/refs/heads/main/lucide/dist/Icons.lua"),
    solar = SafeLoad("https://raw.githubusercontent.com/Footagesus/Icons/refs/heads/main/solar/dist/Icons.lua"),
    craft = SafeLoad("https://raw.githubusercontent.com/Footagesus/Icons/refs/heads/main/craft/dist/Icons.lua"),
    geist = SafeLoad("https://raw.githubusercontent.com/Footagesus/Icons/refs/heads/main/geist/dist/Icons.lua"),
    sfsymbols = SafeLoad("https://raw.githubusercontent.com/Footagesus/Icons/refs/heads/main/sfsymbols/dist/Icons.lua"),
}


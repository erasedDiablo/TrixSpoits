function IconModule.SetIconsType(iconType)
    IconModule.IconsType = iconType
end

function IconModule.GetIcon(iconString, iconType)
    if not iconString then return nil end
    
    local targetType = iconType or IconModule.IconsType
    local iconName = iconString
    
    -- Parse "type:name" format
    if type(iconString) == "string" and iconString:find(":") then
        local split = iconString:find(":")
        targetType = iconString:sub(1, split - 1)
        iconName = iconString:sub(split + 1)
    end
    
    -- Try to get from loaded packs
    local pack = IconModule.Icons[targetType]
    if pack and pack[iconName] then
        return pack[iconName]
    end
    
    -- Fallback to built-in
    return FallbackIcons[iconName] or FallbackIcons["home"]
end

-- Random Name Generator for Stealth
local function GenerateRandomName()
    local chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
    local name = ""
    for i = 1, math.random(8, 12) do
        name = name .. chars:sub(math.random(1, #chars), math.random(1, #chars))
    end
    return name
end

